<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.about.AboutFragment"
    android:padding="@dimen/spacing_normal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_margin_top"
        android:fontFamily="@font/questrial"
        android:gravity="center_horizontal"
        android:text="@string/about_header"
        android:textAppearance="?textAppearanceHeadline3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_level_2"
        android:fontFamily="@font/questrial"
        android:text="@string/about_discipline_text"
        android:textSize="@dimen/basic_info_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_level_3"
        android:fontFamily="@font/questrial"
        android:text="@string/teacher_name_text"
        android:textSize="@dimen/basic_info_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_level_4"
        android:fontFamily="@font/questrial"
        android:text="@string/project_topic_text"
        android:textSize="@dimen/basic_info_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_level_5"
        android:fontFamily="@font/questrial"
        android:text="@string/developer_name_text"
        android:textSize="@dimen/basic_info_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_level_6"
        android:fontFamily="@font/questrial"
        android:text="@string/project_version_text"
        android:textSize="@dimen/basic_info_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_level_7"
        android:fontFamily="@font/questrial"
        android:text="@string/github_link"
        android:textSize="@dimen/basic_info_text_size" />

</FrameLayout>